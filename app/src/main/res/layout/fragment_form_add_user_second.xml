<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.AddUserSecondFormFragment"
        android:fillViewport="true">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="@dimen/elevation_small_5"
                    app:boxCornerRadiusBottomStart="@dimen/elevation_small_5"
                    app:boxCornerRadiusTopEnd="@dimen/elevation_small_5"
                    app:boxCornerRadiusTopStart="@dimen/elevation_small_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/very_small_4"
                    android:layout_marginStart="@dimen/small_8"
                    android:layout_marginTop="@dimen/small_8" android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_weight"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:minLines="1"
                        android:layout_height="wrap_content"
                        android:hint="@string/weight"
                        android:drawablePadding="@dimen/small_8"
                        android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="@dimen/elevation_small_5"
                    app:boxCornerRadiusBottomStart="@dimen/elevation_small_5"
                    app:boxCornerRadiusTopEnd="@dimen/elevation_small_5"
                    app:boxCornerRadiusTopStart="@dimen/elevation_small_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/small_8"
                    android:layout_marginStart="@dimen/very_small_4"
                    android:layout_marginTop="@dimen/small_8" android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_height"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:minLines="1"
                        android:layout_height="wrap_content"
                        android:hint="@string/height"
                        android:drawablePadding="@dimen/small_8"
                        android:inputType="numberSigned"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@android:color/darker_gray"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomEnd="@dimen/elevation_small_5"
                app:boxCornerRadiusBottomStart="@dimen/elevation_small_5"
                app:boxCornerRadiusTopEnd="@dimen/elevation_small_5"
                app:boxCornerRadiusTopStart="@dimen/elevation_small_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/small_8"
                android:layout_marginTop="@dimen/small_8" android:layout_marginEnd="@dimen/small_8">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_membership_type"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:minLines="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/membership_type"
                    android:drawablePadding="@dimen/small_8"
                    android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@android:color/darker_gray"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomEnd="@dimen/elevation_small_5"
                app:boxCornerRadiusBottomStart="@dimen/elevation_small_5"
                app:boxCornerRadiusTopEnd="@dimen/elevation_small_5"
                app:boxCornerRadiusTopStart="@dimen/elevation_small_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/small_8"
                android:layout_marginStart="@dimen/small_8"
                android:layout_marginTop="@dimen/small_8">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_amount"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:minLines="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/amount"
                    android:drawablePadding="@dimen/small_8"
                    android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@android:color/darker_gray"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomEnd="@dimen/elevation_small_5"
                app:boxCornerRadiusBottomStart="@dimen/elevation_small_5"
                app:boxCornerRadiusTopEnd="@dimen/elevation_small_5"
                app:boxCornerRadiusTopStart="@dimen/elevation_small_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/small_8"
                android:layout_marginStart="@dimen/small_8"
                android:layout_marginTop="@dimen/small_8">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_payment_status"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:minLines="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/payment_status"
                    android:drawablePadding="@dimen/small_8"
                    android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@android:color/darker_gray"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomEnd="@dimen/elevation_small_5"
                app:boxCornerRadiusBottomStart="@dimen/elevation_small_5"
                app:boxCornerRadiusTopEnd="@dimen/elevation_small_5"
                app:boxCornerRadiusTopStart="@dimen/elevation_small_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/small_8"
                android:layout_marginStart="@dimen/small_8"
                android:layout_marginTop="@dimen/small_8">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_added_by"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:minLines="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/added_by"
                    android:drawablePadding="@dimen/small_8"
                    android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/medium_16"
                android:layout_marginBottom="@dimen/small_8"
                android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/back" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/small_8"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="@dimen/small_8"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    android:text="@string/add"
                    android:layout_marginBottom="@dimen/small_8"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="@dimen/small_8"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="@dimen/small_8"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/button_back"
                    android:layout_marginStart="@dimen/small_8"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>